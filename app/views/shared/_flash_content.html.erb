<div
  class="group fixed bottom-4 right-4 z-100 pointer-events-auto flex items-center gap-3 w-full max-w-sm overflow-hidden rounded-xl border p-3 pr-12 shadow-lg transition-all duration-300 opacity-0 translate-y-2 bg-card/95 backdrop-blur-sm text-foreground border-border"
  data-controller="notification"
  data-notification-delay-value="5000"
  role="alert"
>
  <div class="shrink-0">
    <%= status_icon_tag(key) %>
  </div>

  <div class="flex-1 text-sm font-normal leading-relaxed text-left">
    <%= value %>
  </div>

  <button
    type="button"
    class="absolute right-3 top-3 p-1 rounded-md hover:bg-muted/80 transition-colors duration-150 text-muted-foreground hover:text-foreground focus:outline-none focus:ring-1 focus:ring-primary"
    data-action="click->notification#hide"
    aria-label="Close"
  >
    <span class="sr-only">Close</span>
    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
</div>
